{% extends 'index.html.twig' %}

{% block content %}
    <main id="main-basket">
        <div class="step" id="category">
            <p>Choisissez votre <span>catégorie</span></p>
            <div class="category">
                <div class="category-names">
                    <div class="green-border"></div>
                    <div class="names">
                        <p>Vegan</p>
                    </div>
                </div>
                <div class="category-img">
                    <img src="assets/img/basket_category_vegan.png" alt="icon vegan">
                </div>
                <img src="assets/img/basket_category_arrow.png" alt="arrow">
            </div>
            <div class="category">
                <div class="category-names">
                    <div class="green-border"></div>
                    <div class="names">
                        <p>Vegan</p>
                        <p>Bio</p>
                    </div>
                </div>
                <div class="category-img">
                    <img src="assets/img/basket_category_vegan.png" alt="icon vegan">
                    <img src="assets/img/basket_category_bio.png" alt="icon bio"> 
                </div>           
                <img src="assets/img/basket_category_arrow.png" alt="arrow">
            </div>
            <div class="category">
                <div class="category-names">
                    <div class="green-border"></div>
                    <div class="names">
                        <p>Vegan</p>
                        <p>Gluten Free</p>
                    </div>
                </div>
                <div class="category-img">
                    <img src="assets/img/basket_category_vegan.png" alt="icon vegan">
                    <img src="assets/img/basket_category_gluten_free.png" alt="icon gluten free"> 
                </div>           
                <img src="assets/img/basket_category_arrow.png" alt="arrow">
            </div>
            <div class="category">
                <div class="category-names">
                    <div class="green-border"></div>
                    <div class="names">
                        <p>Vegan</p>
                        <p>Bio</p>
                        <p>Gluten Free</p>
                    </div>
                </div>
                <div class="category-img">
                    <img src="assets/img/basket_category_vegan.png" alt="icon vegan">
                    <img src="assets/img/basket_category_gluten_free.png" alt="icon gluten free">
                    <img src="assets/img/basket_category_bio.png" alt="icon bio">
                </div>           
                <img src="assets/img/basket_category_arrow.png" alt="arrow">
            </div>
        </div>
        <div class="step" id="basket">
            <p>Choisissez votre <span>panier</span></p>
            <div class="basket">
                <img src="assets/img/basket_1.png" alt="basket">
                <div class="basket-desc">
                    <p class="name">Panier Printanier</p>
                    <p class="text">
                        Avec ses goûts variés et naturels, le panier printanier
                        est pour vous si vous cherchez un repas simple et légé !
                    </p>
                    <p class="portion">Disponible en portions pour 1 à 3 personnes</p>
                    <div class="category-indicator category-gluten-free">Gluten Free</div>
                </div>
            </div>
            <div class="basket">
                <img src="assets/img/basket_2.png" alt="basket">
                <div class="basket-desc">
                    <p class="name">Panier Néophyte</p>
                    <p class="text">
                        Avec ses goûts variés et naturels, le panier printanier
                        est pour vous si vous cherchez un repas simple et légé !
                    </p>
                    <p class="portion">Disponible en portions pour 1 à 3 personnes</p>
                    <div class="category-indicator category-bio">Bio</div>
                </div>
            </div>
        </div>
        <div class="step"></div>
    </main>
{% endblock %}
                <a href="#favorites-content" id="favorites-link">Favoris</a>
                <hr>
            </div>
        </nav>
        <div>
            <form id="modify-content">
                <div class="profile-content">
                    <div class="firstname">
                        <p class="name">Pseudo : </p>
                        <p class="info">{{ user.username }}</p>
                    </div>
                    <div class="email">
                        <p class="name">Email : </p>
                        <p class="info">{{ user.email }}</p>
                    </div>
                    <div class="password">
                        <p class="name">Mot de passe : </p>
                        <p class="info">Modifier le mot de passe</p>
                    </div>
                    <div class="gender">
                        <p class="name">Genre : </p>
                        <div class="choose-gender">
                            <div>
                                {% if 'female' in user.gender %}
                                    <input type="radio" value="female" id="female" name="gender" checked>
                                {% else %}
                                    <input type="radio" value="female" id="female" name="gender">
                                {% endif %}
                                <label for="female">
                                    <img src="assets/img/female.png">
                                    <p class="info">Femme</p>
                                </label>
                            </div>
                            <div>
                                {% if 'male' in user.gender %}
                                    <input type="radio" value="male" id="male" name="gender" checked>
                                {% else %}
                                    <input type="radio" value="male" id="male" name="gender">
                                {% endif %}
                                <label for="male">
                                    <img src="assets/img/male.png">
                                    <p class="info">Homme</p>
                                </label>
                            </div>
                            <div>
                                {% if 'other' in user.gender %}
                                    <input type="radio" value="other" id="other" name="gender" checked>
                                {% else %}
                                    <input type="radio" value="other" id="other" name="gender">
                                {% endif %}
                                <label for="other">
                                    <p class="info">Autre</p>
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="birthdate">
                        <p class="name">Date de naissance : </p>
                        <p class="info">{{ user.birthdate }}</p>
                    </div>
                    <div class="adress">
                        <p class="name">Adresse : </p>
                        <p class="info">{{ user.adress }}</p>
                    </div>
                </div>
                <input type="submit" value="Enregistrer">
            </form>
        </div>
        <div>
